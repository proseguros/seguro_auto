---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title> 
		<link rel="stylesheet" href="" class="font"> 
		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> 
		

		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=AW-11473303988"></script>
		<script>
		  window.dataLayer = window.dataLayer || [];
		  function gtag(){dataLayer.push(arguments);}
		  gtag('js', new Date());
		
		  gtag('config', 'AW-11473303988');
		</script>


<script>
	function gtag_report_conversion(url) {
	  var callback = function () {
		if (typeof(url) != 'undefined') {
		  window.location = url;
		}
	  };
	  gtag('event', 'conversion', {
		  'send_to': 'AW-11473303988/2eZMCKOl540ZELTz8t4q',
		  'event_callback': callback
	  });
	  return false;
	}
	</script>
	
	

	</head>
	<body>
		<Header/>
		<slot />
		<Footer/>

	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	body{
		font-family: 'Montserrat', sans-serif;
	}
	
</style>

<script>
	window.addEventListener('DOMContentLoaded', function(){
		const etiquetaFont = document.querySelector('.font') 
		etiquetaFont.setAttribute('href', 'https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap')

	})
</script>





