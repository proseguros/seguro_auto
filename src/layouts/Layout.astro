---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title> 
		<link rel="stylesheet" href="" class="font"> 
		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> 
		
<script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
	new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
	j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
	'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
	})(window,document,'script','dataLayer','GTM-PCGBZV75');</script>
	

	</head>
	<body>
		<Header/>
		<slot />
		<Footer/>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	body{
		font-family: 'Montserrat', sans-serif;
	}
	
</style>

<script>
	window.addEventListener('DOMContentLoaded', function(){
		const etiquetaFont = document.querySelector('.font') 
		etiquetaFont.setAttribute('href', 'https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap')

	})
</script>





